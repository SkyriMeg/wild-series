{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
{% endblock %}

{% block body %}

	<a href="{{ path('program_index') }}" type="button" class="btn mt-3">
		← Toutes les séries
	</a>
	<br><a href="{{ path('category_index') }}" type="button" class="btn mt-3">
		← Retour aux catégories
	</a>

	<div class="media text-center">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>
				Genre :
				{{ program.category.name }}</p>

			Acteurs :
			{% for actor in program.actors %}
				<a href="{{ path("actor_show", {"id": actor.id }) }}">{{ actor.name }}</a>
				||
			{% else %}
				<li>Aucun acteur pour cette série.</li>
			{% endfor %}

			<br><br>
			{% for season in program.seasons %}

				<li>
					<a href="{{ path("program_season_show", {"programId": program.id, "seasonId": season.id }) }}">
						Saison
						{{ season.number }}
						-
						{{  season.year }}
					</a>
				</li>
			</a>
		</li>
	{% else %}
		Aucune saison trouvée.
	{%  endfor %}
	<br><a href="{{ path('program_edit', {'id': program.id}) }}">Modifier</a>
</div></div>{% endblock %}

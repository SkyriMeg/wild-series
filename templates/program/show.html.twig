{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
{% endblock %}

{% block body %}

	<a href="{{ path('program_index') }}" type="button" class="btn mt-3">
		← Toutes les séries
	</a>
	<br><a href="{{ path('category_index') }}" type="button" class="btn mt-3">
		← Retour aux catégories
	</a>

	<div class="media text-center">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Genre :
				{{ program.category.name }}</p>

			{% for season in program.seasons %}
				<li>
					{# <li href="{{ path("program_season_show", {"programId": program.id, "seasonId": season.id }) }}" class="text-dark"> #}
					Saison
					{{ season.number }}
					-{{  season.year }}
				</li>
			</a>
		</li>
	{% else %}
		Aucune saison trouvée.
	{%  endfor %}
</div></div>{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
	- S{{ season.number }}-E{{ episodes.number }}
{% endblock %}

{%  block body %}
	<main>
		<h1>{{ program.title }}</h1>
		<h2>{{ episodes.title }}</h2>
		<h5>
			<i>Saison
				{{ season.number }}
				: Episode
				{{ episodes.number }}</i>
		</h5>
		<p>{{ episodes.synopsis }}</p>

		<a href="{{ path("program_season_show", {"programId": program.id, "seasonId": season.id }) }}">
			Retour à la saison
			{{ season.number }}
		</a>

		<br><a href="{{ path('program_show', {"id":program.id}) }}">
			Retour à la fiche série</a>
	</main>
{% endblock %}

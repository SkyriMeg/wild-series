{% extends 'base.html.twig' %}

{% block title %}Saisons index
{% endblock %}

{% block body %}
	<h1>Saisons index</h1>

	<a href="{{ path('app_season_new') }}">Ajouter une nouvelle saison</a>

	<table class="table">
		<thead>
			<tr>
				<th>Identifiant</th>
				<th>Numéro</th>
				<th>Année</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for season in seasons %}
				<tr>
					<td>{{ season.id }}</td>
					<td>{{ season.number }}</td>
					<td>{{ season.year }}</td>
					<td>{{ season.description }}</td>
					<td>
						<a href="{{ path('app_season_show', {'id': season.id}) }}">Voir</a>
						<a href="{{ path('app_season_edit', {'id': season.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucune saison trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_season_new') }}">Ajouter une nouvelle saison</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
	{{ categories.name }}
{% endblock %}

{% block body %}
	<a href="{{ path('program_index') }}" type="button" class="btn mt-3">
		← Toutes les séries
	</a>
	<br><a href="{{ path('category_index') }}" type="button" class="btn mt-3">
		← Retour aux catégories
	</a>

	<div class="container">
		<div class="programsList">
			{% for program in programs %}

				<div class="card mb-2" style="width: 18rem">

					<div class="card-body d-flex flex-column align-center">
						<h3 class=" card-title text-uppercase">{{program.title}}</h3>
						<p class="card-synopsis my-5">{{program.synopsis}}</p>

						<div class="mt-auto text-center">
							<a href="{{ path('program_show', {slug:program.slug}) }}" class="btn p-2 rounded stretched-link">Voir détails</a>
						</div>
					</div>
				</div>
			{% else %}
				Aucune série trouvée.
			{% endfor %}
		</div>
	</div>
{% endblock %}

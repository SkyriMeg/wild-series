{% extends 'base.html.twig' %}

{% block title %}Episodes index
{% endblock %}

{% block body %}
	<h1>Episodes index</h1>

	<a href="{{ path('app_episode_new') }}">Ajouter un nouvel épisode</a>

	<table class="table">
		<thead>
			<tr>
				<th>Identifiant</th>
				<th>Titre</th>
				<th>Numéro</th>
				<th>Synopsis</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for episode in episodes %}
				<tr>
					<td>{{ episode.id }}</td>
					<td>{{ episode.title }}</td>
					<td>{{ episode.number }}</td>
					<td>{{ episode.synopsis }}</td>
					<td>
						<a href="{{ path('app_episode_show', {'id': episode.id}) }}">Voir</a>
						<a href="{{ path('app_episode_edit', {'id': episode.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun épisode trouvé.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Acteurs index
{% endblock %}

{% block body %}
	<h1>Acteurs index</h1>

	<a href="{{ path('app_actor_new') }}">Ajouter un acteur / actrice</a>

	<table class="table">
		<thead>
			<tr>
				<th>Identifiant</th>
				<th>Nom</th>
				<th>Mise à jour</th>
				<th>Photo</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for actor in actors %}
				<tr>
					<td>{{ actor.id }}</td>
					<td>{{ actor.name }}</td>
					<td>{{ actor.updatedAt ? actor.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td><img class="rounded w-25 mb-2" src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}"/></td>
					<td>
						<a href="{{ path('app_actor_show', {'id': actor.id}) }}">Voir</a>
						<a href="{{ path('app_actor_edit', {'id': actor.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun acteur / actrice trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
